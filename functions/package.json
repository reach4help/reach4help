{
  "name": "functions",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "test:firestore": "firebase emulators:exec --only firestore 'yarn jest ./tests/*.test.ts'",
    "test:triggers": "firebase emulators:exec --only firestore 'yarn jest ./tests/triggers/*.test.ts'",
    "test": "yarn run test:firestore && yarn run test:triggers",
    "lint": "eslint . --ext .ts && prettier --check \"./**/*.ts\"",
    "lint:fix": "eslint . --fix --ext .ts && prettier --write \"./**/*.ts\"",
    "clean": "rm -rf lib ",
    "build": "yarn run clean && tsc --build src/tsconfig.json",
    "serve": "yarn run build && firebase emulators:start",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "yarn run lint && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "pre-commit": "lint-staged"
  },
  "main": "lib/index.js",
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.7.3",
    "@googlemaps/google-maps-services-js": "^2.4.2",
    "@types/convict": "^4.2.1",
    "@types/flat": "^5.0.0",
    "@types/googlemaps": "^3.39.3",
    "@types/node-fetch": "^2.5.7",
    "algoliasearch": "^4.1.0",
    "class-validator": "^0.11.1",
    "convict": "^6.2.3",
    "firebase": "^7.14.0",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.15.4",
    "flat": "^5.0.0",
    "moment": "^2.29.3",
    "node-fetch": "^2.6.1",
    "twilio": "^3.42.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@firebase/testing": "^0.18.2",
    "@types/jest": "^25.1.4",
    "eslint": "^8.57.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^8.4.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.0.9",
    "prettier": "^1.19.1",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.3"
  },
  "private": true
}
